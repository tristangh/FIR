<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:context=".AddExpense">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SPREAD SHEET"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/enter_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Type"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <RelativeLayout
            android:id="@+id/rel_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/enter_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Date"
                android:textColor="#000000"
                android:padding="10dp"
                android:textSize="19sp" />

        </RelativeLayout>

        <EditText
            android:id="@+id/enter_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Status"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/enter_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Member"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/enter_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Category"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/enter_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Invoicelink"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/enter_account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter AccountName"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/enter_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Description"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/enter_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Balance"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/enter_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Device"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/enter_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Address"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <EditText
            android:id="@+id/enter_parent_cat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Parent Category"
            android:padding="10dp"
            tools:ignore="MissingConstraints"/>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginBottom="5dp"
            android:text="Submit"/>
        </LinearLayout>
</ScrollView>